#!/bin/bash
#doc add aliases and quick zjot functions

export BCH_LBIN=${HOME}/.local/bin/BCH_LBIN
[ -d $BCH_LBIN ] && mkdir $BCH_LBIN
. steve.path:add $BCH_LBIN
alias .z="bryan.zjot new"
alias prefs="source bh.bch:prefs"

alias .dd=".bh dd "
alias die="touch ~/die"
.bg    () { .med bg=${1}; }
.med () { bryan.zjot new [med] $*; }
.food () { bryan.zjot new [food] $*; }
.bh () {
    $(which .bh) $*
    [ "$1" == "" ] && alias
}
bh. () {
    .cd bh.$*
}
.cd () {
    X=
    [ "$1" == dots  ] && { cd ${STEVE}/dots; return; }
    [ "$1" == steve ] && { cd ${STEVE}/bin; return; }
    [ -z "$X" ] && X=$(which $1)
    [ -z "$X" ] && echo .go: bad $1
    [ -z "$X" ] && return
    cd $(dirname $X)
}

bclone () { git clone git@github.com:bryanhann/bryan.$*; }
gclone () { git clone git@github.com:bryanhann/$* ; }

